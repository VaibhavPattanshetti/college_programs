#include <stdio.h>

int main()
{
    int size,temp=0;

    printf("enter size of array:");
    scanf("%d",&size);
    int arr[size];
    printf("\nenter array elements:");
    for(int i=0;i<size;i++){
        scanf("%d",&arr[i]);
    }

    printf("\narray elements before reversing:");
    for(int i=0;i<size;i++){
        printf("%d ",arr[i]);
    }

    for(int i=0;i<=size/2;i++){
        temp=arr[i];
        arr[i]=arr[size-i-1];
        arr[size-1]=temp;
    }

    printf("\narray elements after reversing:");
    for(int i=0;i<size;i++){
        printf("%d ",arr[i]);
    }


    return 0;
}
