#include<stdio.h>
int main(){
   int n,temp,flag=0;
   
   printf("Enter the limit of array\n");
   scanf("%d",&n);
   
   int a[n];
   printf("Enter elements of array\n");
   for(int i=0;i<n;i++){
       scanf("%d",&a[i]);
   }
   
   printf("Elements of array before sorting\n");
   for(int i=0;i<n;i++){
        printf("%d ",a[i]);
   }
   
   //sorting Array
   for(int i=0;i<n-1;i++){
         for(int j=0;j<n-1-i;j++){
               if(a[j]>a[j+1]){
                  temp=a[j];
                  a[j]=a[j+1];
                  a[j+1]=temp;
                  flag=1;
               }
               
         }
         if(flag==0){
            printf("\nGiven array is already sorted\n");
            break;
         }
         
   }
   
   if(flag==1){
       printf("\nElements of array after sorting\n");
   }
   for(int i=0;i<n;i++){
       printf("%d ",a[i]);
   }
   
   return 0;
}
